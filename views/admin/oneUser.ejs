<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
<link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 ml-auto col-xl-12 mr-auto">
            <div class="card-body" style="border: 1px solid #4b49ac;">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card border-info mb-3 col-lg-12 grid-margin stretch-card" style="max-width: 18rem;">
                        <div class="card-header">
                            <h3>
                                UserId: <%-response._id %>
                            </h3>
                        </div>
                        <div class="card-body text-info">
                            <h5 class="card-title">
                                <h6>Name:<%-response.name %>
                                </h6>
                            </h5>
                            <p class="card-text">Email: <%-response.email%></p>
                            <p class="card-text">Mobile: <%-response.mobile%></p>
                            <% if (response.blocked) {%>
                                <p class="card-text">Email: Blocked</p>

                                <% } else {%>
                                    <p class="card-text">Email: Active</p>

                            <% } %>
                            <h2>Address:</h2>
                            <ul>
                                <% response.address.forEach(element=> {%>
                                    <li>
                                        <p class="card-text">
                                            <%=element.streetAddress%>,<%=element.state%>,
                                            <%=element.country%>, <%=element.pincode%>,
                                        </p>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.6/jspdf.plugin.autotable.min.js"></script>