
<section class="col-md-12">
  <div class="main-panel col-lg-12 mt-4">
    <div class="container   ">
      <div class="row ">
        <div class="col-lg-8">
          <div>
            <h2 class="text-center text-primary mt-2">Add Products</h2>
          </div>
          <form action="/admin/addproduct" method="post" enctype="multipart/form-data">
            <label for="">Name</label>
            <input type="text" name="name" class="form-control" required>

            <label for="" class="mt-3">Price</label>
            <input type="tel" name="marketPrice" class="form-control" required>
            <label for="" class="mt-3">Stock</label>
            <input type="tel" name="stock" class="form-control" required>

            <label for="" class="mt-3">Description</label>
            <input type="text" name="description" class="form-control" required>

            <div>
              <label class="mt-2">Category </label>
                <select class="form-select form-select-sm mt-3" name="category" aria-label=".form-select-sm example">
                  <option hidden disabled selected >Choose...</option>
                  <% if (cat) { for (let i=0; i < cat.length; i++) {%>
                    <option name="category" value="<%=cat[i].category %>"><%=cat[i].category %></option>
                    <%}} %>
                </select>
            </div>

            <hr>
            <div class="form-group col-md-10">
              <label for="">
                <h4>Image-1 </h4>
              </label>
              <input type="file" name="image" id="image" class="form-control" onchange="viewImage1(event)" required>
              <span class="form-group col-md-10">
                <img src="" alt="" style="width: 75px; height: 75px;" id="imgView1">
              </span>
            </div>

            <div class="form-group col-md-10">
              <label for="">
                <h4>Image-2 </h4>
              </label>
              <input type="file" name="image" id="image" class="form-control" onchange="viewImage2(event)" required>
              <span class="form-group col-md-10">
                <img src="" alt="" style="width: 75px; height: 75px;" id="imgView2">
              </span>
            </div>

            <div class="form-group col-md-10">
              <label for="">
                <h4>Image-3 </h4>
              </label>
              <input type="file" name="image" id="image" class="form-control" onchange="viewImage3(event)" required>
              <span class="form-group col-md-10">
                <img src="" alt="" style="width: 75px; height: 75px;" id="imgView3">
              </span>
            </div>

            <div class="form-group col-md-10">
              <label for="">
                <h4>Image-4 </h4>
              </label>
              <input type="file" name="image" id="image" class="form-control" onchange="viewImage4(event)" required>
              <span class="form-group col-md-10">
                <img src="" alt="" style="width: 75px; height: 75px;" id="imgView4">
              </span>
            </div>
            <hr>
            <button type="submit" class="btn btn-success mt-4 mb-4">SUBMIT</button>
            <hr>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
