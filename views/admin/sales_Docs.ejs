  footer {
    margin-top: 50px;
    color: #555;
    background: #fff;
    padding: 25px;
    font-weight: 300;
    background: #f7f7f7;

  }

  .footer p {
    margin-bottom: 0;
  }

  footer p a {
    color: #555;
    font-weight: 400;
  }

  footer p a:hover {
    color: #e86c42;
  }

  @media screen and (max-width: 768px) {

    .nav-tabs {
      display: inline-block;
      width: 100%;
      padding-left: 100px;
      padding-right: 100px;
      text-align: center;
    }

    .nav-tabs .nav-item>.nav-link {
      margin-bottom: 5px;
    }
  }
</style>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 ml-auto col-xl-12 mr-auto">
      <!-- Tabs with Background on Card -->
      <div class="card">
        <div class="card-header">
          <ul class="nav nav-tabs nav-tabs-neutral justify-content-center" role="tablist"
            data-background-color="orange">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#home1" role="tab">Daily</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#profile1" role="tab">Monthly</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#messages1" role="tab">Yearly</a>
            </li>
          </ul>
        </div>
        <div class="card-body" style="border: 1px solid gray;">

          <!-- Tab panes -->
          <div class="tab-content">
            <div class="tab-pane active mt-2 mx-auto" id="home1" role="tabpanel">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <button onclick="generateDailyReport('<%newDaily%>')"
                      class="btn btn-outline-primary btn-round btn-sm float-right">
                      Download PDF
                    </button>
                    <h4 class="card-title">Daily Sales</h4>

                    <div class="table-responsive pt-3">
                      <table class="table table-bordered" id="my-daily-table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>No of Product Sold</th>
                            <th>Total Revenue</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% newDaily?.forEach((element,index)=> { %>
                            <tr>
                              <td><%-index+1 %> </td>
                              <td><%-element?.name%></td>
                              <td><%-element?.category%></td>
                              <td><%-element?.quantity%> </td>
                              <td><%-element?.quantity*element.marketPrice%></td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- generateMontlyReport -->
            <div class="tab-pane" id="profile1" role="tabpanel">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <button onclick="generateMontlyReport('<%newMonthy%>')"
                      class="btn btn-outline-primary btn-round btn-sm float-right">
                      Download PDF
                    </button>
                    <h4 class="card-title">Monthly Sales</h4>

                    <div class="table-responsive pt-3">
                      <table class="table table-bordered" id="my-monthly-table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>No of Product Sold</th>
                            <th>Total Revenue</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% newMonthy.forEach((element,index)=> { %>
                            <tr>
                              <td><%-index+1 %></td>
                              <td><%-element.name%></td>
                              <td><%-element.category%></td>
                              <td><%-element.quantity%></td>
                              <td> <%-element.quantity*element.marketPrice%></td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- generateYearlyReport -->
            <div class="tab-pane" id="messages1" role="tabpanel">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <button onclick="generateYearlyReport('')"
                      class="btn btn-outline-primary btn-round btn-sm float-right">
                      Download PDF
                    </button>
                    <h4 class="card-title">Yearly Sales</h4>
                    <div class="table-responsive pt-3">
                      <table class="table table-bordered" id="my-yearly-table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>No of Product Sold</th>
                            <th>Total Revenue</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% newYearly.forEach((element,index)=> { %>
                            <tr>
                              <td><%-index+1 %> </td>
                              <td><%-element.name%></td>
                              <td><%-element.category%></td>
                              <td><%-element.quantity%> </td>
                              <td><%-element.quantity*element.marketPrice%></td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
      <!-- End Tabs on plain Card -->
    </div>
  </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.6/jspdf.plugin.autotable.min.js"></script>

<script>
  function generateDailyReport(data) {
    var doc = new jsPDF()

    // create a new page --> doc.addPage()
    
    // add some text 
    doc.text('Daily Report', 80, 20) // left top positions
    
    doc.setFontSize(12)
    doc.setTextColor(255, 0, 0) // red color
    doc.text('Confidential Report. Not to be shared',60 , 30)
    
    doc.setFontSize(14)
    doc.setTextColor(0,0,0) //Black color
    doc.text('This PDF contains Daily sales reports of VOLTA. The details include products\n name, the category, the quantity of each product and the revenue generated', 15, 40)
  
    doc.autoTable({
      html: '#my-daily-table',
      startY: 60
    })
    doc.save('Daily Report.pdf')
  }

  function generateMontlyReport() {
    var doc = new jsPDF()

    doc.text('Monthly Report', 80, 20) 
    
    doc.setFontSize(12)
    doc.setTextColor(255, 0, 0) 
    doc.text('Confidential Report. Not to be shared',60 , 30)
    
    doc.setFontSize(14)
    doc.setTextColor(0,0,0) 
    doc.text('This PDF contains monthly sales reports of VOLTA. The details include products\n name, the category, the quantity of each product and the revenue generated', 15, 40)
  
    // add the table 
    doc.autoTable({
      html: '#my-monthly-table',
      startY: 60 
    })

    doc.save('Monthly Report.pdf')
  }

  function generateYearlyReport(total, orders, count) {
    var doc = new jsPDF()

    doc.text('Yearly Report', 80, 20)
    
    doc.setFontSize(12)
    doc.setTextColor(255, 0, 0) 
    doc.text('Confidential Report. Not to be shared',60 , 30)
    
    doc.setFontSize(14)
    doc.setTextColor(0,0,0) 
    doc.text('This PDF contains Yearly sales reports of VOLTA. The details include products\n name, the category, the quantity of each product and the revenue generated', 15, 40)
  
    doc.autoTable({
      html: '#my-yearly-table',
      startY: 60
    })
    doc.save('Yearly Sales Report.pdf')
  }
</script>