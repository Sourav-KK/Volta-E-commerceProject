<div class="container-fluid page-body-wrapper">
  

  <!-- partial -->
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Monthly sales</h4>
              <canvas id="myChart" style="width:100%;max-width:700px"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="row" style="display: flex;justify-content: space-around;">
                <h4 class="card-title">Payment Method</h4>
                <h5>Total: <%=totalOrders %>
                </h5>
              </div>
              <canvas id="doughnutChartt" style="width:100%;max-width:700px"></canvas>
              <!-- <canvas id="myChart2" style="width:100%;max-width:700px"></canvas> -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <!-- main-panel ends -->
</div>
<!-- page-body-wrapper ends -->
</div>

<script>
  // line chart
  let charts = document.getElementById("myChart")
  new Chart(charts, {
    type: "line",
    data: {
      labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
      datasets: [{
        label: 'Sales',
        tension: 0.3,
        fill: true,
        backgroundColor: 'rgba(44, 120, 220, 0.2)',
        borderColor: 'rgba(44, 120, 220)',
        data: ["<%=monthly[0] %>","<%=monthly[1] %>","<%=monthly[2] %>","<%=monthly[3] %>","<%=monthly[4] %>","<%=monthly[5] %>",
                               "<%=monthly[6] %>","<%=monthly[7] %>","<%=monthly[8] %>","<%=monthly[9] %>","<%=monthly[10] %>","<%=monthly[11] %>"]
      },
      ]
    },
    options: {
      plugins: {
        legend: {
          labels: {
            usePointStyle: true,
          },
        }
      }
    }
  });

  // doughnut chart
  const dataa = {
    labels: [
      'PayPal',
      'COD'
    ],
    datasets: [{
      label: 'My First Dataset',
      data: ["<%=paymentPaypal %>","<%=paymentCOD %>"],
      backgroundColor: [
        'rgb(255, 99, 100)',
        'rgb(54, 162, 235)',
        'rgb(255, 205, 86)'
      ],
      hoverOffset: 4
    }]
  };
  
  let charty = document.getElementById("doughnutChartt")
  new Chart(charty, {
    type: 'doughnut',
    data: dataa
  })
</script>