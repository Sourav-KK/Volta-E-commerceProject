<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 ml-auto col-xl-12 mr-auto">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body" style="border-style:solid;color: #4b49ac;border-radius: 5cqh;">
                        <div class="table-responsive pt-3">
                            <% if (data) {%>
                                <form class="forms-sample" method="post" action="/admin/edit-banner?id=<%=data._id%>"
                                    enctype="multipart/form-data">
                                    <div class="col-12">
                                        <div class="form-group col-md-12">
                                            <div class="d-flex">
                                                <label class="w-25">Title</label>
                                                <p id="err" class="text-danger d-flex justify-content-end w-75"></p>
                                            </div>
                                            <input type="text" class="form-control" id="name" placeholder="Title"
                                                value="<%=data.title%>" name="title" required>
                                        </div>

                                        <div class="form-group col-md-12">
                                            <div class="d-flex">
                                                <label class="w-25">Description</label>
                                                <p id="err" class="text-danger d-flex justify-content-end w-75"></p>
                                            </div>
                                            <input type="text" class="form-control" id="name" placeholder="Description"
                                                value="<%=data.description%>" name="description" required>
                                        </div>

                                        <div class="form-group col-md-12">
                                            <img src="" alt="" class="img-fluid w-25 h-25" id="imgView">
                                        </div>

                                        <div class="form-group col-md-12">
                                            <label for="">Image</label>
                                            <input type="file" name="image" id="image" class="form-control"
                                                onchange="viewImage(event)">
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <button type="submit" class="btn btn-primary ml-3 mr-2 col-md-2">Submit</button>
                                        <button class="btn btn-light" onclick="location.reload()">Cancel</button>
                                    </div>
                                </form>
                            <%} %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>