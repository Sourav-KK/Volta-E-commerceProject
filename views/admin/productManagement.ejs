<div class="container-fluid page-body-wrapper col-lg-10 ">
  <div class="container">
    <div class="row">
      <div class="container mb-3 ">
        <a type="button" href="/admin/addproduct" class="btn btn-success btn-sm">Add new Product </a>
      </div>
      <table class="table table-hover table-bordered table-responsive"
        style="text-align: center;vertical-align: middle;">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col" class="col-2">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Category</th>
            <th scope="col">image</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach((products,index)=>{ %>
            <tr>
              <td><%- index+1 %></td>
              <td>
                <%- products.name %>
              </td>
              <td>
                <%- products.description %>
              </td>
              <td>
                <%- products.marketPrice %>
              </td>
              <td>
                <%- products.stock %>
              </td>
              <td>
                <%- products.category %>
              </td>
              <td>
                <img src=/productImages/<%=products._id %>0.jpg alt="img goes here">
              </td>
              <td>
                <a href="/admin/editproduct?id=<%= products._id %>" class="btn btn-primary">EDIT</a>
                <a href="/admin/deleteproduct?id=<%= products._id %>" class="btn btn-danger"
                  onclick=" return confirm('Are you sure you want to delete this product ????')">Delete </a>
              </td>
            </tr>
            <% }) %>
        </tbody>

      </table>
    </div>
  </div>


</div>
