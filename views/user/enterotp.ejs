<script>
    var numbererror = document.getElementById('numberError');
    var otperror = document.getElementById('otpError');

    var emailerror = document.getElementById('email-error');
    var passworderror = document.getElementById('passwordError');
    var nameerror = document.getElementById('nameError');

    function validatenumber() {
        let number = document.getElementById('register-email-2').value;

        if (number.length == 0) {
            numbererror.innerHTML = " This Field is Required !";
            return false;
        }
        if (number.length > 10) {
            numbererror.innerHTML = " Maximum 10 digits allowed  !";
            return false;
        }
        if (!number.match(/^[0-9()-]+$/)) {
            numbererror.innerHTML = "Only digits are allowed!";
            return false;
        }
        if (number.length < 10) {
            numbererror.innerHTML = " Enter a 12 digits number, with country code !";
            return false;
        }
        numbererror.innerHTML = '';
        return true;
    }

    function validateotp() {
        let otp = document.getElementById("register-password-2").value;
        if (otp.length == 0) {
            passworderror.innerHTML = " This Field is Required !";
            return false;
        }
        if (otp.length > 6) {
            otperror.innerHTML = " Invlaid otp  !";
            return false;
        }
        if (!otp.match(/^[0-9()-]+$/)) {
            otperror.innerHTML = "Only digits are allowed !";
            return false;
        }
        otperror.innerHTML = '';
        return true;
    }

    function validateForm() {
        if (!validateotp() || !validatenumber()) {
            return false;
        }
    }
</script>